// Problem # 6: Computing L1 U L2 using only basic list operations

#include <iostream>
#include <list>


using namespace std;

void printLots (list<int> L, list<int> P)
{
    P.sort(); // Sorts the list from smallest to biggest.
    P.unique(); //Removes any duplicates; Linear time.
    
    
    int counter = 0;
    
    for (list<int>::iterator i = L.begin(); i != L.end(); ++i){
        for (list<int>::iterator j = P.begin(); j != P.end(); ++j){
            if ( *j == counter){
                cout << ' ' << *i;
            }
            counter++;
        }
        cout << '\n';
    }
    return;
}


int main()
{
    list <int> alpha, beta;
    alpha.push_back(1);
    alpha.push_back(2);
    alpha.push_back(3);
    
    beta.push_back(1);
    
    printLots(alpha, beta);
    
    return 0;
}
