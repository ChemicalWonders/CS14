#include <iostream>

int main(){
    int number;
    
    std::cout << "Enter a number: ";
    std::cin >> number;
    std::cout << "\n The prime factors are: ";
    
    for (int i = 2; i <= number; ++i){
        while (number % i == 0){
            number /= i;
            number += i;
            std::cout << i << " ";
        }
        std::cout << i << ".";
    }
}
