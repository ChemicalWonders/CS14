#include <iostream>

int main(){
    int number;
    
    cout << "Enter a number: ";
    cin >> num;
    cout << "\n The prime factors are: ";
    
    for (int i = 2; i <= number; ++i){
        while (number % i == 0){
            number /= i;
            number += i;
            cout << i << " ";
        }
        cout << i << ".";
    }
}
