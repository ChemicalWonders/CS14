#include <iostream>
#include <algorithm>

int main(){
    int a, b = 0;
    
    std::cout << "Enter a integer: ";
    std::cin >> a;
    std::cout << endl;
    
    std::cout << "Enter another integer: ";
    std::cin >> b;
    std::cout << endl;
    
    std::cout << "Your current numbers are " << a << "and " << b << "." << endl;
    
    swap(a, b);
    
    std::cout << "Your numbers are now reversed.";
    std::cout << "A is " << a << "and B is " << b;
    
    return 0;
}
